<%= turbo_frame_tag "flash-messages" do %>
  <% flash.each do |type, message| %>
    <div class="max-w-md mx-auto mt-4 p-4 <%= type == 'alert' ? 'bg-red-100 border-l-4 border-red-500 text-red-700' : 'bg-green-100 border-l-4 border-green-500 text-green-700' %>" role="alert">
      <p><%= message %></p>
    </div>
  <% end %>
<% end %>
