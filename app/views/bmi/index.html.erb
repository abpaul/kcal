<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6 text-center">BMI Calculator</h1>

  <%= form_with url: calculate_bmi_path, method: :post, class: "max-w-md mx-auto" do |f| %>
    <div class="mb-4">
      <%= f.label :weight, 'Weight (kg)', class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :weight, min: 1, step: 0.1, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div class="mb-4">
      <%= f.label :height, 'Height (cm)', class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :height, min: 1, step: 0.1, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <%= f.submit 'Calculate', class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  <% end %>

  <div id="bmi-results" class="mt-8">
    <%= turbo_frame_tag "bmi-result" do %>
    <% end %>
  </div>

  <div class="mt-8 max-w-md mx-auto">
    <h2 class="text-xl font-semibold mb-4">Categories:</h2>
    <ul class="list-disc pl-5">
      <li>Underweight: BMI below 18.5</li>
      <li>Normal weight: BMI 18.5 to 24.9</li>
      <li>Overweight: BMI 25 to 29.9</li>
      <li>Obese: BMI 30 or greater</li>
    </ul>
  </div>
</div>
