<div class="container mx-auto px-4 py-2" data-controller="calorie-calculator">
  <h1 class="text-3xl font-bold mb-6 text-center">Calories Calculator</h1>

  <%= form_with url: calculate_calories_path, method: :post, class: "max-w-md mx-auto" do |f| %>
    <div class="mb-4">
      <%= f.label :gender, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :gender, options_for_select([['Male', 'male'], ['Female', 'female']]), {}, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" } %>
    </div>

    <div class="mb-4">
      <%= f.label :age, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :age, min: 1, max: 120, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div class="mb-4">
      <%= f.label :weight, 'Weight (kg)', class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :weight, min: 1, step: 0.1, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div class="mb-4">
      <%= f.label :height, 'Height (cm)', class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :height, min: 1, step: 0.1, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div class="mb-6">
      <%= f.label :activity_level, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :activity_level, options_for_select([
        ['Sedentary', 'sedentary'],
        ['Light Exercise', 'light'],
        ['Moderate Exercise', 'moderate'],
        ['Active', 'active'],
        ['Very Active', 'very_active']
      ]), {}, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" } %>
    </div>

    <%= f.submit 'Calculate', class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  <% end %>

  <div id="results">
    <%= turbo_frame_tag "result" do %>
    <% end %>
  </div>
</div>
